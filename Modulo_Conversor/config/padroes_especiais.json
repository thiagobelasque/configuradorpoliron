        "codigo": "(PT/AZ-CL)"
      },
      "3": {
        "pattern": "3[Cc].*PRETO.*BRANCO.*AZUL CLARO",
        "codigo": "(PT/BR/AZ-CL)"
      },
      "4": {
        "pattern": "4[Cc].*PRETO.*BRANCO.*VERMELHO.*AZUL CLARO",
        "codigo": "(PT/BR/VM/AZ-CL)"
