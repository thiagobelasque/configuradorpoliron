    "instrumentacao_quadras": "\\d+[Qq]x\\s*\\d+[,.]?\\d*mm2",
    "energia_controle": "\\d+[Cc]x\\s*\\d+[,.]?\\d*mm2"
  },
  "palavras_chave_tipo": {
    "vfd": ["INVERSOR DE FREQUENCIA", "VFD"],
